<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    tools:context=".Menu"
    android:background="@color/colorMenu"
    android:id="@+id/menu"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBtn_1"
            style="@style/imagenesPulsablesMenu"
            android:src="@drawable/anti_covid_1"
            tools:src="@drawable/anti_covid_1" />

        <ImageButton
            android:id="@+id/imgBtn_2"
            style="@style/imagenesPulsablesMenu"
            android:src="@drawable/anti_covid_2"
            tools:src="@drawable/anti_covid_2" />

        <ImageButton
            android:id="@+id/imgBtn_3"
            style="@style/imagenesPulsablesMenu"
            android:src="@drawable/anti_covid_3"
            tools:src="@drawable/anti_covid_3" />
    </LinearLayout>

</FrameLayout>